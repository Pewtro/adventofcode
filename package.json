{
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18.12.0 <20 || >=20.8.0"
  },
  "devDependencies": {
    "@putstack/eslint-config-typescript": "2.2.0",
    "@putstack/prettier-config": "1.4.0",
    "@types/node": "20.11.9",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "husky": "9.0.6",
    "lint-staged": "15.2.0",
    "prettier": "3.2.4",
    "tsx": "4.7.0",
    "typescript": "5.3.3"
  },
  "scripts": {
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky install",
    "stylecheck": "prettier --check .",
    "test:ci": "concurrently \"pnpm:lint\" \"pnpm:typecheck\" \"pnpm:stylecheck\" ",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,mdx,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "pnpm --silent lint:fix"
    ]
  }
}
