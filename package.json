{
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18.12.0 <20 || >=20.8.0"
  },
  "devDependencies": {
    "@putstack/eslint-config-typescript": "3.0.0-next.10",
    "@putstack/prettier-config": "1.4.1",
    "@types/node": "20.14.12",
    "eslint": "9.7.0",
    "husky": "9.1.1",
    "npm-run-all2": "6.2.2",
    "lint-staged": "15.2.7",
    "prettier": "3.3.3",
    "tsx": "4.16.2",
    "typescript": "5.5.4"
  },
  "scripts": {
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "stylecheck": "prettier --check .",
    "test:ci": "npm-run-all -p -l lint typecheck stylecheck",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,mdx,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "pnpm --silent lint:fix"
    ]
  }
}
