{
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18.12.0 <20 || >=20.8.0"
  },
  "devDependencies": {
    "@putstack/eslint-config-typescript": "2.2.0",
    "@putstack/prettier-config": "1.4.0",
    "@types/node": "20.11.17",
    "eslint": "8.56.0",
    "husky": "9.0.10",
    "npm-run-all2": "6.1.2",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "tsx": "4.7.1",
    "typescript": "5.3.3"
  },
  "scripts": {
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "stylecheck": "prettier --check .",
    "test:ci": "npm-run-all -p -l lint typecheck stylecheck",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,mdx,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "pnpm --silent lint:fix"
    ]
  }
}
